{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "tokenRef": "GITHUB_AUTH"
  },
  "npm": false,
  "plugins": {
    "release-it-lerna-changelog": {
      "infile": "CHANGELOG.md"
    },
    "release-it-yarn-workspaces": {
      "skipChecks": true,
      "publish": false
    }
  }
}
